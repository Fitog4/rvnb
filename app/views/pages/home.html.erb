<div class="banner">
  <div class="container">
    <h1>Are you ready for your next trip?</h1>
    <p>Find the perfect RV</p>

    <%= form_tag({controller: "rvs", action: "search"}, method: "get", class: "form-inline") do %>
      <%= label_tag(:rv, "Location:") %>
      <%= text_field(:rv, :available_in) %>
      <%= label_tag(:rv, "Rent from:") %>
      <%= date_field(:rv, :available_from) %>
      <%= label_tag(:rv, "Rent till:") %>
      <%= date_field(:rv, :available_till) %>
      <%= submit_tag("Search") %>
    <% end %>

    <form class="form-inline" action="/rvs" accept-charset="UTF-8" method="get">
      <input name="utf8" type="hidden" value="âœ“">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="rv[available_in]" id="rv_available_in" placeholder="Location" class="form-control">
      <div class="form-group">
        <label for="rv">Rent from:</label>
        <input type="date" name="rv[available_from]" id="rv_available_from" placeholder="Rent from:" class="form-control">
      </div>
      <div class="form-group">
        <label for="rv">Rent till:</label>
        <input type="date" name="rv[available_till]" id="rv_available_till" placeholder="Rent till:" class="form-control">
      </div>
      <input type="submit" name="commit" value="Search" data-disable-with="Search" class="btn btn-default">
</form>

    <!-- <a class="btn-red" href="#">Call to Action</a> -->
    <!-- <a class="btn-blue" href="#">Call to Action</a> -->
  </div>
</div>

